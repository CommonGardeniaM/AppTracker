{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["es2020"],
    "module": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}